{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@content/*": ["./src/content/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@repo/unocss/config": ["../../packages/unocss/src/uno.config.ts"],
      "@repo/unocss": ["../../packages/unocss/src/index.ts"],
      "@repo/unocss/css": ["../../packages/unocss/src/styles/global.css"],
      "@repo/design": ["../../packages/design/src/index.ts"],
      "@repo/design/components/*": ["../../packages/design/src/components/*"],
      "@repo/design/layouts/*": ["../../packages/design/src/layouts/*"],
      "@repo/design/styles/*": ["../../packages/design/src/styles/*"],
      "@repo/design/utils/*": ["../../packages/design/src/utils/*"]
    }
  }
}
